@model Profile

@{
    ViewBag.Title = "Edit Profile";
}

<h2 class="text-center mt-5 mb-5">Edit Profile Information</h2>

<form asp-controller="Account" asp-action="EditProfile" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="FullName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="FullName" class="form-control" placeholder="Full Name">
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Address1" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Address1" class="form-control" placeholder="Street Address 1">
            <span asp-validation-for="Address1" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Address2" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Address2" class="form-control" placeholder="Street Address 2">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="City" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="City" class="form-control" placeholder="City">
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group row">
        <label asp-for="State" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="State" asp-items="Model.States"></select>
            <span asp-validation-for="State" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group row">
        <label asp-for="Zipcode" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Zipcode" class="form-control" placeholder="Zipcode">
            <span asp-validation-for="Zipcode" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-save2" viewBox="0 0 16 16">
            <path d="M2 1a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H9.5a1 1 0 0 0-1 1v4.5h2a.5.5 0 0 1 .354.854l-2.5 2.5a.5.5 0 0 1-.708 0l-2.5-2.5A.5.5 0 0 1 5.5 6.5h2V2a2 2 0 0 1 2-2H14a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h2.5a.5.5 0 0 1 0 1H2z" />
        </svg>
        Save
    </button>

</form>